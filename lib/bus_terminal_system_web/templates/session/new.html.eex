<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Login</title>

	<!-- Global stylesheets -->
    	<link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    	<link href="<%= Routes.static_path(@conn, "/css/material/icons/icomoon/styles.css") %>" rel="stylesheet" type="text/css">
        <link href="<%= Routes.static_path(@conn, "/css/material/bootstrap.css") %>" rel="stylesheet" type="text/css">
        <link href="<%= Routes.static_path(@conn, "/css/material/core.css") %>" rel="stylesheet" type="text/css">
        <link href="<%= Routes.static_path(@conn, "/css/material/components.css") %>" rel="stylesheet" type="text/css">
        <link href="<%= Routes.static_path(@conn, "/css/material/colors.css") %>" rel="stylesheet" type="text/css">
         <link href="<%= Routes.static_path(@conn, "/css/w3.css") %>" rel="stylesheet" type="text/css" />
         <link href="<%= Routes.static_path(@conn, "/css/custom.css") %>" rel="stylesheet" type="text/css">
    	<!-- /global stylesheets -->

    	<!-- Core JS files -->
                <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/material/plugins/loaders/pace.min.js") %>"></script>
                <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/material/core/libraries/bootstrap.min.js") %>"></script>
                <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/material/plugins/loaders/blockui.min.js") %>"></script>
                <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/jquery.min.js") %>"></script>
            <!-- /core JS files -->


    	<!-- Theme JS files -->
    	<script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/material/core/app.js") %>"></script>

    	<script type="text/javascript" src="assets/js/plugins/ui/ripple.min.js"></script>
    	<!-- /theme JS files -->

</head>

<body class="navbar-bottom login-container" id="backgroundLog">

	<!-- Main navbar -->
	<div class="navbar navbar-fixed bg-indigo w3-card-2 navbar-fixed-top">
		<!--
			COLLAPSE FOR LOGIN MULFUNCTIONING WILL DEBUG LATER
		<div class="navbar-header">           
    		<ul class="nav navbar-nav visible-xs-block">
    			<li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
    		</ul>
    	</div>
    	-->

		<div class="navbar-header pull-right" style="margin-top: 0.5%;" id="navbar-mobile">
			<ul style="list-style: none;" id="textColor">
				<li class="tab active" style="display:inline;">
					<a href="#ticketForm">
						<i class="icon-cash3 position-left">
							Buy Ticket
						</i>
					</a>
				</li>

				<li class="tab" style="display:inline;">
					<a href="#loginForm">
						<i class="icon-user position-left">
							Login
						</i>
					</a>
				</li>
			</ul>
		</div>
	</div>
	<!-- /main navbar -->


	<!-- Page container -->
	<div class="page-container">
		<!-- Main content -->
		<div class="container"><!--id="LoginForm"-->

			<!--#################### Ticket Form ####################-->
			<div class="container-fluid forms" id="styleForms">
			   	<form method="POST" action="" id="ticketForm" style="margin-top: 3%;">
			   		<div class="panel panel-body login-form" style="width: 70%;">

						<div class="text-center" style="height: 5%">
							<div class="icon-object border-slate-100 text-slate-100 w3-orange">
								<img src="<%= Routes.static_path(@conn, "/images/logo/1.png") %>" width="100" height="70" alt="NapsaLogo">
							</div>

							<h5 class="content-group">To Purschase Ticket <small class="display-block">Fill Form Below</small></h5>
						</div>

			    		<div class="form-group has-feedback has-feedback-left">
							<input name="passenger[passenger_name]" type="text" class="form-control" placeholder="Name of Passenger">
							<div class="form-control-feedback">
								<i class="icon-user text-muted"></i>
							</div>
						</div>

			    		<div class="form-group has-feedback has-feedback-left">
			    			<select class="w3-select" name="option">
							    <option value="" disabled selected>Name Of Terminus</option>
							    <option value="1">Livingstone</option>
							    <option value="2">Lusaka</option>
							    <option value="3">Ndola</option>
								<option value="3">Sesheke</option>
								<option value="3">Mambo</option>
								<option value="3">Lundazi</option>
							</select>
						</div>

						<div class="form-group has-feedback has-feedback-left">
							<div class="row">
								<div class="col-md-6">
									<select class="w3-select" name="option">
										<option value="" disabled selected>From</option>
										<option value="1">Livingstone</option>
										<option value="2">Lusaka</option>
										<option value="3">Ndola</option>
										<option value="3">Sesheke</option>
										<option value="3">Mambo</option>
										<option value="3">Lundazi</option>
									</select>
								</div>

								<div class="col-md-6">
									<select class="w3-select" name="option">
										<option value="" disabled selected>To</option>
										<option value="1">Livingstone</option>
										<option value="2">Lusaka</option>
										<option value="3">Ndola</option>
										<option value="3">Sesheke</option>
										<option value="3">Mambo</option>
										<option value="3">Lundazi</option>
									</select>
								</div>
							</div>
						</div>

						<div class="form-group has-feedback has-feedback-left">
							<select class="w3-select" name="option">
								<option value="" disabled selected>Name Of Bus</option>
								<option value="1">Jordan Moters</option>
								<option value="2">Zambia-Malawi</option>
								<option value="3">Likili </option>
								<option value="3">Mazhandu</option>
								<option value="3">Power Tools</option>
								<option value="3">TDE</option>
							</select>
						</div>

						<div class="form-group has-feedback has-feedback-left">
							<select class="w3-select" name="option">
							    <option value="" disabled selected>Time of Departure</option>
							    <option value="1">06:00</option>
							    <option value="2">10:00</option>
							    <option value="3">14:00</option>
							</select>
						</div>

						<div class="form-group has-feedback has-feedback-left">
							<select class="w3-select" name="option">
								<option value="" disabled selected>Number Of Passagers</option>
								<option value="1">1</option>
								<option value="2">2</option>
								<option value="3">3</option>
								<option value="3">4</option>
								<option value="3">5</option>
								<option value="3">6</option>
								<option value="2">7</option>
								<option value="3">8</option>
								<option value="3">9</option>
								<option value="3">10</option>
							</select>
						</div>

						<div class="form-group has-feedback has-feedback-left">
							<input name="location" type="Date" class="form-control" placeholder="Date of Depature">
							<div class="form-control-feedback">
								<i class="icon-table text-muted"></i>
							</div>
						</div>


						<div class="form-group">
							<button class="w3-btn w3-indigo w3-hover-orange">
								Buy Ticket
						    </button>
						</div>

			  		</div>
			    </form>

			<!--#################### Ticket Form ####################-->

			<!--#################### Login Form ####################-->

				<form method="POST" action="<%= Routes.session_path(@conn, :login) %>" id="loginForm" style="margin-top: 6%; margin-left: 5%;">
					<div class="panel panel-body login-form">
						<div class="text-center">
							<div class="icon-object border-slate-100 text-slate-100 w3-orange">
								<img src="<%= Routes.static_path(@conn, "/images/logo/1.png") %>" width="120" height="120" alt="NapsaLogo">
							</div>
							<h5 class="content-group">Login to your account <small class="display-block">Enter your credentials below</small></h5>
						</div>

						<div class="form-group has-feedback has-feedback-left">
							<input name="user[username]" type="text" class="form-control" placeholder="Username">
							<input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
							<div class="form-control-feedback">
								<i class="icon-user text-muted"></i>
							</div>
						</div>

						<div class="form-group has-feedback has-feedback-left">
							<input name="user[password]" type="password" class="form-control" placeholder="Password">
							<div class="form-control-feedback">
								<i class="icon-lock2 text-muted"></i>
							</div>
						</div>

						<div class="form-group">
							<button class="w3-btn w3-indigo w3-hover-orange">
								Sign In
						    </button>
						</div>

						<div class="text-center">
							<a href="login_password_recover.html">Forgot password?</a>
						</div>
					</div>
				</form>
				<!--#################### Login Form ####################-->				
			</div>

		</div>
		<!-- Main content -->
	</div>

	<div id="footer" class="w3-indigo">
  		<div class="container">
            <h5 id="busStatement">
            	&copy; 2019. <a href="#" class="navbar-link" target="_blank">Bus Terminus System</a> 
            </h5>

           	<h5 id="probaseStatement">
	            Powered by <e style="color:orange;">Pro</e><e style="color:black;">BASE</e>    
            </h5>
        </div>
	</div>

	<script>
	  $(document).ready(function(){
	  $('.tab a').on('click', function (e) {
	  e.preventDefault();
	  
	  $(this).parent().addClass('active');
	  $(this).parent().siblings().removeClass();
	  
	  
	  var href = $(this).attr('href');
	  $('.forms > form').hide();
	  $(href).fadeIn(500);
	});
		});
	</script>

</body>
</html>