                                                    </ul>
                                                </div>
                                            </div>
                                            <div style="overflow-x:auto;">
                                                    <table class="table table-striped table-bordered" id="stations">
                                                        <thead>
                                                            <tr>
                                                                <th>ID</th>
                                                                <th>Section Name</th>
                                                                <th>Number of Shops</th>
                                                                <th>Section Label</th>
                                                                <th>Market Name</th>
                                                            <th></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <%= for sec <- @sections do %>
