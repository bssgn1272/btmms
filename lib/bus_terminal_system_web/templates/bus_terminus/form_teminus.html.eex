<div class="col-md-6">
          <form class="form-vertical" action="<%= Routes.bus_terminus_path(@conn, :create) %>" method="post">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title"></h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                                <li><a data-action="reload"></a></li>
                                <li><a data-action="close"></a></li>
                            </ul>
                        </div>
                    </div>

                <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset>
                                    <legend class="text-semibold"><i class="icon-reading position-left"></i> REGISTERING BUS TEMINUS</legend>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Teminus Name:</label>
                                                <input name="vehicle[make]" id="vehicleMake" class="form-control" placeholder="Name of Teminus" type="text">
                                                <input type="hidden" name="_csrf_token" value="<%= Plug.CSRFProtection.get_csrf_token()%>">
                                            </div>

                                            <div class="form-group">
                                                <input name="vehicle[uid]" id="vehicleUid" type="hidden" class="form-control" readonly="readonly" value="<%= BusTerminalSystem.Randomizer.randomizer(8)%>" placeholder="Auto Generated">
                                            </div>

                                            <div class="form-group">
                                                  <label>Teminus Location:</label>
                                                  <input name="vehicle[liscense_plate]" id="licensePlate" class="form-control" placeholder="Location of Teminus" type="text">
                                            </div>

                                        </div>

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                  <label>Estimated No. of Buses:</label>
                                                  <input name="vehicle[model]" id="vehicleModel" class="form-control" placeholder="Estimated No. of Buses" type="text">
                                            </div>

                                            <div class="form-group">
                                                  <label>City/Town:</label>
                                                  <input name="vehicle[engine_type]" id="engineType" class="form-control" placeholder="City/Town" type="text">
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <br>

                        <div class="text-right">
                            <button type="submit" id="submitVehicleButton" style="border-radius: 12px;" class="w3-btn w3-indigo w3-hover-purple w3-left">
                                <b><i class="icon-checkmark2"></i></b>Register Teminus
                            </button>
                            
                            <span>
                                <%= link "Back" , class: "w3-btn w3-indigo w3-hover-purple", style: "border-radius: 12px", type: "submit",to: Routes.user_path(@conn, :index) %>
                            </span>
                        </div>
                    </div>
                </div>
            </form>
    </div>

<div class="col-md-6">
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title"></h5>
            <div class="heading-elements">
            </div>
        </div>

    <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <fieldset>
                        <legend class="text-semibold"><i class="icon-reading position-left"></i> PREVIEW</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <b>TEMINUS NAME </b><div id="vehicleMakeText"></div>
                            </div>

                            <div class="col-md-6">
                                <b>ESTIMATED No. OF BUSES</b><div id="vehicleModelText"></div>
                            </div>
                        </div>

                        <div class="row" style="margin-top: 30px">
                            <div class="col-md-6">
                                <b>TEMINUS LOCATION </b><div id="vehicleLicensePlateText"></div>
                            </div>

                            <div class="col-md-6">
                                <b>CITY/TOWN </b><div id="vehicleEngineTypeText"></div>
                            </div>
                        </div>

                        <legend class="text-semibold"><i class=""></i></legend>
                    </fieldset>
                </div>
            </div>

        </div>
    </div>
</div>